 <div class="container"> 
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= @post.genre %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @post.author&.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @post.description %>
  </p>

  <p>
    <strong>Pages:</strong>
    <%= @post.pages %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
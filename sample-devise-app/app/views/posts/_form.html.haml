!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
      .container {
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: left;
        border: 2px solid;
        top: 30%;
        left: 45%;
        width: 28%;
        height: 60%;
        margin-top: -8em;
        margin-left: -15em;
        position: fixed;
        vertical-align: middle;
        background-color: rgba(255, 255, 255, 0.6);
      }
  %body
    .container
      = form_for(@post) do |f|
        - if @post.errors.any?
          #error_explanation
            %h2
              = pluralize(@post.errors.count, "error")
              prohibited this post from being saved:
            %ul
              - @post.errors.full_messages.each do |message|
                %li= message
        .field
          = f.label :title
          %br/
          = f.text_field :title
        .field
          = f.label :genre
          %br/
          = f.text_field :genre
        .field
          = f.label :author_id
          %br/
          = f.select :author_id, Author.all.map{|c| [c.name, c.id]}, include_blank: true
        .field
          = f.label :description
          %br/
          = f.text_area :description
        .field
          = f.label :pages
          %br/
          = f.number_field :pages
        .actions
          = f.submit
